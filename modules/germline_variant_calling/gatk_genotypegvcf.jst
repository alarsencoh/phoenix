# Call variants on a gVCF with GATK
{% macro genotypegvcf(sample_name, sample, aligner='bwa') %}
{% for batch in constants.phoenix.intervals_batched %}
- name: genotypegvcf_{{ aligner }}_{{ sample_name }}_{{ loop.index }}
  input: {{ sample.glType }}/constitutional_variant_calls/haplotypecaller/{{ sample_name }}.{{ aligner }}.hc.g.vcf.gz
  walltime: "24:00:00"
  cpus: 4
  cmd: |
    set -euv
    module load {{ constants.tools.gatk_4_0_7_0.module }}
    mkdir -p "temp/{{ sample_name }}_{{ aligner }}_hc_vcf_chunks/"

    gatk GenotypeGVCFs \
      --java-options "-Xmx4g" \
      --reference {{ constants.phoenix.reference_fasta_path }} \
      {% for interval in batch %}
      --intervals "{{ interval.contig }}:{{ interval.start }}-{{ interval.stop }}" \
      {% endfor %}
      --variant "{{ sample.glType }}/constitutional_variant_calls/haplotypecaller/{{ sample_name }}.{{ aligner }}.hc.g.vcf.gz" \
      --output "temp/{{ sample_name }}_{{ aligner }}_hc_vcf_chunks/{{ loop.index }}.vcf.gz"

{% endfor %}

- name: genotypegvcf_merge_{{ aligner }}_{{ sample_name }}
  after: 
    re: genotypegvcf_{{ aligner }}_{{ sample_name }}_.*
  output: {{ sample.glType }}/constitutional_variant_calls/haplotypecaller/{{ sample_name }}.{{ aligner }}.hc.vcf.gz
  walltime: "24:00:00"
  cpus: 4
  cmd: |
    #!/bin/bash
    set -euv
    module load {{ constants.tools.gatk_4_0_7_0.module }}

    gatk MergeVcfs \
      {% for batch in constants.phoenix.intervals_batched %}
      --INPUT "temp/{{ sample_name }}_{{ aligner }}_hc_vcf_chunks/{{ loop.index }}.vcf.gz" \
      {% endfor %}
      --OUTPUT "{{ sample.glType }}/constitutional_variant_calls/haplotypecaller/{{ sample_name }}.{{ aligner }}.hc.vcf.gz"

    {% if not debug %}
    rm -r "temp/{{ sample_name }}_{{ aligner }}_hc_vcf_chunks/"
    {% endif %}

{% endmacro %}

