{% macro read_group_line(rg, delim='\\t') -%}
{% set tags = [
  'ID:' + rg.rgid,
  'LB:' + rg.rglb,
  'PU:' + rg.rgpu,
  'SM:' + rg.rgsm,
  'PL:' + rg.rgpl,
  'CN:' + rg.rgcn|default('tgen'),
  'PM:' + rg.rgpm,
  'KS:' + rg.rgks|default('unknown')
] %}
{% set tags = delim.join(tags) %}
{% set rgline = '@RG' + delim + tags %}
{{ rgline }}
{%- endmacro %}
